{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "ignorePatterns": [
        "**/public/*.html",
        "**/dist/*.js"
    ],
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "max-len": "off"
    }
}
